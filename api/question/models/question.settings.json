{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "name": "Question"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "label": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "answers": {
      "collection": "answer",
      "via": "question"
    },
    "layout": {
      "type": "enumeration",
      "enum": [
        "vertical_cards",
        "checkboxes"
      ],
      "default": "checkboxes"
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "answer_width": {
      "type": "string",
      "default": "40%"
    },
    "answer_gap": {
      "type": "string",
      "default": "2.5%"
    },
    "quiz": {
      "model": "quiz",
      "via": "questions"
    },
    "image_aspect_ratio": {
      "type": "string",
      "default": "100%"
    },
    "answer_metrics": {
      "type": "dynamiczone",
      "components": [
        "metrics.charity",
        "metrics.myers-briggs-answers"
      ],
      "required": true
    }
  }
}
