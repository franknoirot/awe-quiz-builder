{
  "kind": "collectionType",
  "collectionName": "interstitials",
  "info": {
    "name": "Interstitial"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "label": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "layout": {
      "type": "enumeration",
      "enum": [
        "icon",
        "tall_image"
      ],
      "default": "icon"
    },
    "transition": {
      "type": "enumeration",
      "enum": [
        "fade",
        "slide_bottom"
      ],
      "default": "fade"
    },
    "quiz": {
      "model": "quiz",
      "via": "interstitials"
    },
    "slug": {
      "type": "string",
      "regex": "[\\w\\d-]",
      "required": true,
      "unique": true
    },
    "location": {
      "type": "dynamiczone",
      "components": [
        "interstitial.absolute",
        "interstitial.relative-to-question"
      ],
      "max": 1
    }
  }
}
